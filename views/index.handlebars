<!-- NavBar W/Brand -->
<nav id="nav-label" class="navbar navbar-light bg-light">
    <span class="navbar-brand mb-0 h1">Dirty Burger</span>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col col-md-3">
            <h2> Signature Creations...</h2>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burger/ordered-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col col-md-6">
            <h2>Create a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="makeBurger">Burger Name:</label>
                    <input type="text" id="makeBurger" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col col-md-3">
            <h2>Devoured...</h2>
            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burger/consumed-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>

