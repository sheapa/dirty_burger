<!-- NavBar W/Brand -->
<nav class="navbar navbar-light bg-light">
    <span class="navbar-brand mb-0 h1">Dirty Burger</span>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col col-md-3">
            <h2> Signature creations...</h2>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burger/ordered-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col col-md-6">
            <h2>Design a burger...</h2>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Double-Dirty W/Extra Cheese..."
                    aria-label="Recipient's username" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2">Order!</button>
                </div>
            </div>
        </div>
        <div class="col col-md-3">
            <h2>Devoured...</h2>
            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burger/consumed-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>

